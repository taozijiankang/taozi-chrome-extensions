{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "noEmit": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "checkJs": true,
    "strict": true,
    "target": "ES2022",
    "types": ["node"]
  },
  "include": [".node/**/*.js", "src/**/*.js"]
}
